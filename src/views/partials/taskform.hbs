<div class="card card-body p-4 rounded-5  text-black">
    <h2>Agregar un nuevo licor</h2>
    <form action="/produc/add" method="POST">
    <div>
        <label class="col-sm-4 col-form-label" for="nombre">Nombre del licor</label>
        <input
        type="text"
        name="nombre"
        id="nombre"
        placeholder="Nombre"
        class="form-control"
        />
    </div>

    <div>
        <label class="col-sm-4 col-form-label" for="cantidad">Cantidad en ML</label>
        <input
        type="number"
        id="cantidad"
        name="contenido"
        placeholder="Cantidad en ML"
        class="form-control"
        />
    </div>

    <div>
        <label class="col-sm-4 col-form-label" for="precio">Precio</label>
        <input
        type="number"
        id="precio"
        name="precio"
        placeholder="precio $"
        class="form-control"
        />
    </div>

    <div>
        <label class="col-sm-4 col-form-label" for="tipo">Tipo</label>
        <input
        type="text"
        id="tipo"
        name="tipo"
        placeholder="Tipo de licor"
        class="form-control"
        />
    </div>

    <div>
        <label class="col-sm-4 col-form-label" for="disponibles">Disponibles</label>
        <input
        type="number"
        id="disponibles"
        name="disponibles"
        placeholder="Cantidad disponible"
        class="form-control"
        />
    </div>

    <div>
        <label class="col-sm-4 col-form-label" for="vendidos">Vendidos</label>
        <input
        type="number"
        id="vendidos"
        name="vendidos"
        placeholder="Vendidos"
        class="form-control"
        />
    </div>

    <button class="btn btn-success btn-md mt-2">AÃ±adir</button>

    </form>
</div>